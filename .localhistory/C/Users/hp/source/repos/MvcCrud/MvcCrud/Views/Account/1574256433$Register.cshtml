@model MvcCrud.ViewModel.Register
@{
    ViewBag.Title = "Register";
}

<h2 style="color:darkblue">Register  as a partner</h2>
<h3><strong style="color:darkred">This registration is meant for company(ies) that wants a collaboration with us</strong></h3>
<h3><strong style="color:darkred">Individual registration can be done by using the contact link to send us a msg and we will pick it up from there.</strong></h3>

<div>
    @using (Html.BeginForm("SaveRegistrationDetails", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.CompanyName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.CompanyName, new { @class = "form-control" })</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Address)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Address, new { @class = "form-control" })</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PhoneNumber)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
        </div><br />
        <input type="submit" value="Register" class="btn btn-primary" />
    }

</div>
